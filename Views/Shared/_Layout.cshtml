<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dziobify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Courgette&family=Nunito+Sans:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/btn.css" />
    <link rel="stylesheet" href="~/css/main-page.css" />
    <link rel="stylesheet" href="~/css/popup.css" />
    <link rel="stylesheet" href="~/css/form.css" />




</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm u-border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-around">
                <button id="login-btn" class="nav__btn">login</button>
                <a class="navbar-brand d-flex flex-column align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/dziobify-is-looking.png" alt="Dziobify-logo" width="60px">
                   <span class="navbar-brand__name">Dziobify</span>  
                </a>
                <button class="nav__btn">register</button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="main-page pb-3">
            @RenderBody()
        </main>
        <partial name = "_Login.cshtml"/>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Dziobify - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
